<!DOCTYPE html>

@using System.Data;
@using XmlCrud.App_Code;

@{ 
    SongMethods mySongMethods = Session["playlistClass"] as SongMethods;
    string file = Session["file"] as string;
}

<html>
<head>
    <title>PlayMusic</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>
<body>
    <div>
        <p>Voer hier de gegevens van een nieuwe song toe:</p>
        <form method="post">
            <table>
                <tr>
                    <td>ID:</td>
                    <td><input type="text" placeholder="ID" name="id" /></td>
                </tr>
                <tr>
                    <td>Artiest:</td>
                    <td><input type="text" placeholder="Artiest" name="artist" /></td>
                </tr>
                <tr>
                    <td>Title:</td>
                    <td><input type="text" placeholder="Title" name="title" /></td>
                </tr>
                <tr>
                    <td>Bestand locatie:</td>
                    <td><input type="text" placeholder="Bestand locatie" name="fileLocation" /></td>
                </tr>
            </table>
            <input type="submit" value="Opslaan" />
        </form>

        @if (IsPost)
        {
            DataRow dr = mySongMethods.GetEmptyDataRow();

            dr[0] = Request.Form["id"];
            dr[1] = Request.Form["artist"];
            dr[2] = Request.Form["title"];
            dr[3] = Request.Form["fileLocation"];

            mySongMethods.CreateSong(dr, file);
            Response.Redirect(@"~/index.cshtml");
        }
    </div>
</body>
</html>
