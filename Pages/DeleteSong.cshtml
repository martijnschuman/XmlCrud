<!DOCTYPE html>

@using System.Data;
@using XmlCrud.App_Code;

@{
    SongMethods mySongMethods = Session["playlistClass"] as SongMethods;
    string file = Session["file"] as string;

    //Pagina 17
}

<html>
@RenderPage("~/Shared/_Header.cshtml")
<body>
    <div>
        <p>Weet u zeker dat u deze song wilt verwijderen?</p>
        <form method="post">
            Ja <input type="radio" name="DeleteSong" value="ja" />
            Nee <input type="radio" name="DeleteSong" value="Nee" />

            <input type="submit" value="Verder" />
        </form>
    </div>

    @if (IsPost)
    {
        if (Request.Form["DeleteSong"] == "ja")
        {
            string id = Request.QueryString["id"];
            mySongMethods.DeleteSong(id, file);
        }

        Response.Redirect(@"~/index.cshtml");
    }

</body>
@RenderPage("~/Shared/_Footer.cshtml")
</html>
